<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/fon"
    android:orientation="vertical"
    tools:context=".fragments.GameFragment">

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/main_button"
        android:gravity="center_horizontal"
        android:text="Лаборатория"
        android:textAllCaps="true"
        android:textSize="20sp"/>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <androidx.cardview.widget.CardView
        android:id="@+id/questionCard"

        android:layout_marginTop="15dp"
        android:layout_below="@id/timerCard"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:cardCornerRadius="30dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="-"
                android:textColor="@color/colorWhite"
                android:textSize="15sp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
    android:id="@+id/timerCard"
        app:cardCornerRadius="30dp"
    android:layout_marginTop="15dp"
    android:layout_below="@id/name"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_width="wrap_content"
    app:cardBackgroundColor="@color/colorPrimaryDark"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:textSize="35sp"
            android:layout_margin="10dp"
            android:text="0" />
    </LinearLayout>
</androidx.cardview.widget.CardView>

    <LinearLayout
        android:padding="5dp"
        android:layout_below="@id/questionCard"
        android:layout_above="@id/btnHint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ScrollView
            android:layout_weight="1"
            android:id="@+id/tbl1_1"
            android:layout_width="wrap_content"
            android:layout_marginTop="15dp"

            android:layout_height="fill_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    app:cardBackgroundColor="#4393B6"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">
                    <TextView
                        android:id="@+id/el1_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:textSize="35sp"
                        android:layout_margin="10dp"
                        android:text="Li" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    app:cardBackgroundColor="#4393B6"
                    android:layout_marginTop="15dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/el1_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:textSize="35sp"
                        android:layout_margin="10dp"
                        android:text="NaCl2O4" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    app:cardBackgroundColor="#4393B6"
                    android:layout_marginTop="15dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/el1_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:textSize="35sp"
                        android:layout_margin="10dp"
                        android:text="NaCl" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    app:cardBackgroundColor="#4393B6"
                    android:layout_marginTop="15dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/el1_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:textSize="35sp"
                        android:layout_margin="10dp"
                        android:text="NaCl" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    app:cardBackgroundColor="#4393B6"
                    android:layout_marginTop="15dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/el1_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:textSize="35sp"
                        android:layout_margin="10dp"
                        android:text="NaCl" />
                </androidx.cardview.widget.CardView>



            </LinearLayout>
        </ScrollView>
        <ScrollView
            android:id="@+id/tbl1_2"
            android:layout_weight="1"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    app:cardBackgroundColor="#4393B6"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/el2_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:textSize="35sp"
                        android:layout_margin="10dp"
                        android:text="NaCl" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    app:cardBackgroundColor="#4393B6"
                    android:layout_marginTop="15dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/el2_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:textSize="35sp"
                        android:layout_margin="10dp"
                        android:text="NaCl" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    app:cardBackgroundColor="#4393B6"
                    android:layout_marginTop="15dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/el2_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:textSize="35sp"
                        android:layout_margin="10dp"
                        android:text="NaCl" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    app:cardBackgroundColor="#4393B6"
                    android:layout_marginTop="15dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/el2_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:textSize="35sp"
                        android:layout_margin="10dp"
                        android:text="NaCl" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    app:cardBackgroundColor="#4393B6"
                    android:layout_marginTop="15dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/el2_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:textSize="35sp"
                        android:layout_margin="10dp"
                        android:text="NaCl" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <Button
        android:id="@+id/btnStartReaction"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_above="@id/tbl2"
        android:text="Начать реакцию"
        android:textColor="@color/colorWhite"
        android:textSize="15sp"
        app:backgroundTint="#FF0000"
        app:fabSize="mini" />

    <HorizontalScrollView
        android:id="@+id/tbl2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_toRightOf="@id/btnExitToMenu"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/water"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/water" />
            <ImageView
                android:id="@+id/gorelka"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/gorelka" />
        </LinearLayout>
    </HorizontalScrollView>
    <Button
        android:id="@+id/btnExitToMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/main_button"
        android:text="Выход"
        android:textColor="@color/colorWhite" />
    <Button
        android:id="@+id/btnContinue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/main_button"
        android:layout_above="@id/btnExitToMenu"
        android:text="Следующий\n соперник"
        android:textSize="12dp"
        android:textColor="@color/colorWhite" />
</RelativeLayout>